<script>
function rozdaj(){
	var create = [];
	var miejsce = document.getElementsByClassName("plansza");
	for (var i = 1;i<13;i++){
		create[i] = document.createElement('div');
		miejsce.appendChild(create[i]).setAttribute("class", "karta");
	
	}

}

document.getElementById("start").addEventListener("click", rozdaj);
